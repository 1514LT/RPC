serializeHTTPBodyParams(params) ::= <<
$params : {param |
$if(param.bodyParam)$// Serializing body parameter $param.name$
switch($param.name$._d)
{
$param.typecode.members : {member | case $first(member.labels)$:
    httpMessage.setBodyData($param.name$._u.$member.name$);
    break;
};separator="\n"$
}

if(!httpMessage.getBodyData().empty())
{
    if($param.name$._d == 1)
        httpMessage.setBodyContentType("application/xml");
    else if($param.name$._d == 2)
        httpMessage.setBodyContentType("application/json");
}
$endif$
}$

>>

deserializeHTTPBodyParams(params) ::= <<
$params : {param | $if(param.bodyParam)$// Deserializing body parameter $param.name$
$param.name$ $param.name$;
mediaType = httpData.getMediaType();
int discriminator = 0;
if(mediaType.find("xml") != string::npos)
    discriminator = 1;
if(mediaType.find("json") != string::npos)
    discriminator = 2;
    
$param.name$._d = discriminator;
switch(discriminator) {
$param.typecode.members : {member | case $first(member.labels)$:
$param.name$._u.$member.name$ = strdup(httpData.getData().c_str());
break;
}$}
$endif$
}$
