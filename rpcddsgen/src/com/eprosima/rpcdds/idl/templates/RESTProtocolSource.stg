char* $ctx.filename$Protocol::deserialize_$operation.parent.formatedScopedname$_$operation.name$(RESTSerializer* httpSerializer) {
    string mediaType;
    stringstream stream;
    HTTPMethod httpMethod;
    string host = "$ctx.resourceHost$";
    string baseUri = "$ctx.resourceBaseUri$"; // We give the serializator our base uri
    string path = "";
    HTTPUri httpUri = HTTPUri(path);
    httpUri.setHost(host);
    httpUri.setBaseUri(baseUri);
    HTTPParameters httpParams;
    HTTPVersion httpRequestVersion;
    HTTPData httpData;

    httpSerializer->deserialize(httpMethod);
    httpSerializer->deserialize(httpUri);
