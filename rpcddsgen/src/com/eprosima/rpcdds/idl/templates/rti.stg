group main;

memberComplexInit(member) ::= <<
$if(member)$
memset(&$member.name$, 0, sizeof($member.typecode.typename$));
$endif$
>>

memberComplexInitCopy(member, dataname) ::= <<
$if(member)$
$member.typecode.typename$_initialize(&$member.name$);
$member.typecode.typename$_copy(&$member.name$, &$dataname$.$member.name$);
$endif$
>>

memberComplexCopy(member, dataname) ::= <<
$if(member)$
$member.typecode.typename$_copy(&$member.name$, &$dataname$.$member.name$);
$endif$
>>

memberComplexExtract(member, dataname) ::= <<
$if(member)$
$member.typecode.typename$_copy(&$dataname$.$member.name$, &$member.name$);
$endif$
>>

varComplexDecl(variable, create) ::= <<
$if(variable)$
$variable.typecode.typename$ $variable.name$;$if(create)$$\n$memset(&$variable.name$, 0, sizeof($variable.typecode.typename$));$endif$
$endif$
>>

// TODO Â¿Se necesita?
varComplexInitializeT(typeName, name) ::= <<
$typeName$_initialize(&$name$);
>>

varComplexInitialize(variable) ::= <<
$if(variable)$
$variable.typecode.typename$_initialize(&$variable.name$);
$endif$
>>

varComplexDelT(typeName, name) ::= <<$typeName$_finalize(&$name$);>>

varComplexDel(variable) ::= <<$variable.typecode.typename$_finalize(&$variable.name$);>>

varStringDel(name) ::=<<
if($name$ != NULL) free($name$);
>>

